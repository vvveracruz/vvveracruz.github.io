%--------------------- environments ------------------------------
%   question environment
\newcounter{question}[section]
\newenvironment{question}[1]{~\\ \bfseries \refstepcounter{question}\par\medskip
   \noindent Q\thequestion. #1\rmfamily}

\newenvironment{solution}[1]{\par\medskip\noindent \textbf{Solution}. #1\rmfamily}

%  hiding section numbers but preserving numbering
\renewcommand{\thesection}{}
\renewcommand{\thesubsection}{\arabic{section}.\arabic{subsection}}
\makeatletter
\def\@seccntformat#1{\csname #1ignore\expandafter\endcsname\csname the#1\endcsname\quad}
\let\sectionignore\@gobbletwo
\let\latex@numberline\numberline
\def\numberline#1{\if\relax#1\relax\else\latex@numberline{#1}\fi}
\makeatother

