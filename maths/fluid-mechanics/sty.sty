%--------------------- environments ------------------------------
%   question environment
\newcounter{question}[section]
\newenvironment{question}[1]{\bfseries \refstepcounter{question}\par\medskip
   \noindent Q\thequestion. #1\rmfamily}

\newenvironment{solution}[1]{\par\medskip\noindent \textbf{Solution}. #1\rmfamily}

%   maths environments
\newtheorem{theorem}{Theorem}[chapter]
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{corollary}[theorem]{Corollary}
\newtheorem{definition}[theorem]{Definition}
\newtheorem{example}[theorem]{Example}
\newtheorem{conjecture}[theorem]{Conjecture}
\newtheorem{remark}[theorem]{Remark}

\newenvironment{custom-thm}[1]{\par\medskip\noindent \refstepcounter{theorem} \textbf{#1 \thetheorem.} \it \rmfamily}

\makeatletter
\def\th@plain{%
  \thm@notefont{}% same as heading font
  \itshape % body font
}
\def\th@definition{%
  \thm@notefont{}% same as heading font
  \normalfont % body font
}
\makeatother

